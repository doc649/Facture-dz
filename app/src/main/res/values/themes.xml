<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FactureDZ" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_theme_light_primary</item>
        <item name="colorPrimaryVariant">@color/md_theme_light_primaryContainer</item> <!-- Using primaryContainer as variant -->
        <item name="colorOnPrimary">@color/md_theme_light_onPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_theme_light_secondary</item>
        <item name="colorSecondaryVariant">@color/md_theme_light_secondaryContainer</item> <!-- Using secondaryContainer as variant -->
        <item name="colorOnSecondary">@color/md_theme_light_onSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@color/md_theme_light_background</item>
        <item name="colorSurface">@color/md_theme_light_surface</item>
        <item name="colorOnSurface">@color/md_theme_light_onSurface</item>
        <item name="colorError">@color/md_theme_light_error</item>
        <item name="colorOnError">@color/md_theme_light_onError</item>
        
        <!-- Text Input Layout Style -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>

        <!-- Button Style -->
        <item name="materialButtonStyle">@style/Widget.FactureDZ.Button</item>
        <item name="materialButtonOutlinedStyle">@style/Widget.FactureDZ.Button.OutlinedButton</item>
        <item name="materialButtonTextButtonStyle">@style/Widget.FactureDZ.Button.TextButton</item>

        <!-- Card Style -->
        <item name="materialCardViewStyle">@style/Widget.FactureDZ.CardView</item>

        <!-- Bottom Navigation Style -->
        <item name="bottomNavigationStyle">@style/Widget.FactureDZ.BottomNavigationView</item>

        <!-- Toolbar Style -->
        <item name="toolbarStyle">@style/Widget.FactureDZ.Toolbar</item>

        <!-- Typography -->
        <item name="textAppearanceHeadline5">@style/TextAppearance.FactureDZ.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.FactureDZ.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.FactureDZ.Subtitle1</item>
        <item name="textAppearanceBody1">@style/TextAppearance.FactureDZ.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.FactureDZ.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.FactureDZ.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.FactureDZ.Caption</item>

    </style>

    <!-- Specific Widget Styles -->
    <style name="Widget.FactureDZ.Button" parent="Widget.MaterialComponents.Button">
        <item name="android:textColor">@color/md_theme_light_onPrimary</item>
        <item name="backgroundTint">@color/md_theme_light_primary</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.FactureDZ.Button.OutlinedButton" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/md_theme_light_primary</item>
        <item name="android:textColor">@color/md_theme_light_primary</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="Widget.FactureDZ.Button.TextButton" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="android:textColor">@color/md_theme_light_primary</item>
    </style>

    <style name="Widget.FactureDZ.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="cardElevation">2dp</item>
        <item name="cardCornerRadius">8dp</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>

    <style name="Widget.FactureDZ.BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView.Colored">
        <item name="itemIconTint">@color/bottom_nav_item_color_selector</item>
        <item name="itemTextColor">@color/bottom_nav_item_color_selector</item>
        <item name="backgroundTint">@color/md_theme_light_surface</item> 
    </style>

    <style name="Widget.FactureDZ.Toolbar" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="titleTextColor">@color/md_theme_light_onPrimary</item>
        <item name="android:background">@color/md_theme_light_primary</item>
    </style>

    <!-- Typography Styles -->
    <style name="TextAppearance.FactureDZ.Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
        <!-- Add font family if defined -->
    </style>
    <style name="TextAppearance.FactureDZ.Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
    </style>
    <style name="TextAppearance.FactureDZ.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>
    <style name="TextAppearance.FactureDZ.Body1" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">@color/md_theme_light_onBackground</item>
    </style>
    <style name="TextAppearance.FactureDZ.Body2" parent="TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>
    <style name="TextAppearance.FactureDZ.Button" parent="TextAppearance.MaterialComponents.Button">
        <!-- Text color is handled by button styles -->
    </style>
    <style name="TextAppearance.FactureDZ.Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textColor">@color/md_theme_light_onSurfaceVariant</item>
    </style>

    <!-- Theme for AppBar -->
    <style name="Theme.FactureDZ.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />
    <style name="Theme.FactureDZ.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />

</resources>

